<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bggray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/width_1"
            android:layout_gravity="left">

            <ImageButton
                style="@style/imgbtn"
                android:layout_gravity="center"
                android:background="@color/white"
                android:src="@drawable/logo" />

        </LinearLayout>

        <RadioGroup
            android:id="@+id/FF_radiogroup_top"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/FF_radiobtn_guanzhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:button="@null"
                android:text="@string/guanzhu" />

            <RadioButton
                android:id="@+id/FF_radiobtn_tuijian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:button="@null"
                android:text="@string/tuijian" />

        </RadioGroup>

        <LinearLayout
            style="@style/width_1"
            android:layout_gravity="right">

            <View style="@style/width_alone" />

            <ImageButton
                style="@style/imgbtn"
                android:layout_gravity="center"
                android:background="@color/white"
                android:src="@drawable/search" />

            <ImageButton
                style="@style/imgbtn"
                android:layout_gravity="center"
                android:background="@color/white"
                android:src="@drawable/logo" />

        </LinearLayout>

    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/FF_viewpage_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
